<div class="mt4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 collg-4">
            <div class="card card-course-item">
                <a href="/pokemon/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/pokemon/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">BẤM VÀO</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>